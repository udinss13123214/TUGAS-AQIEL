<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- Layout untuk Ikon User -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/card_peringatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="#E40202"
                app:cardCornerRadius="15dp">
                <!-- TextView untuk Running Text -->
                <TextView
                    android:id="@+id/running_text"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="PERINGATAN!! Pendaftaran di TUTUP PADA 11 MARET 2024                      Jangan lupa Cek Ulang Nilai Yang Kalian Input"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white" />
            </androidx.cardview.widget.CardView>

            <!-- Layout untuk Ikon User -->
            <LinearLayout
                android:id="@+id/user_layout"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginEnd="10dp">
                <!-- ImageView untuk Ikon User -->
                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    style="@style/user"
                    android:contentDescription="User Icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSekolah"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/abu"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sekolah"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sekolah Menengah Atas"
                        android:layout_weight="25"
                        android:textSize="16sp"
                        style="@style/color"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonsmk"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/abu"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sekolah"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sekolah Menengah Kejurusan"
                        android:layout_weight="25"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        style="@style/color"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Tombol di bawah pilihan SMA dan SMK -->
        <Button
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Jurusan"
            android:layout_margin="16dp"
            android:backgroundTint="@color/Blue"
            style="@style/color"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <!-- Tabel Langkah-Langkah Pendaftaran -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#E0E0E0">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <!-- Header Langkah-Langkah Pendaftaran -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        style="@style/color"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Langkah-langkah Pendaftaran"
                        style="@style/color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableRow>
                <!-- Langkah 1 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        style="@style/color"
                        android:padding="8dp"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login "
                        style="@style/color"
                        android:padding="8dp"
                        android:textSize="14sp" />
                </TableRow>
                <!-- Langkah 2 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari Sekolah/jurusan yang diingikan"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                </TableRow>
                <!-- Langkah 3 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klik Daftar"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                </TableRow>
                <!-- Langkah 4 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menuju Sekolah terdekat untuk vertifikasi data"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat anda telah menyelesaikan pendaftaran"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#E0E0E0">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <!-- Header Langkah-Langkah Pendaftaran -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Jadwal Pendaftaran"
                        style="@style/color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>
                <!-- Langkah 1 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-5 Maret (09:00 s/d 06:00)"
                        style="@style/color"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendaftaran"
                        style="@style/color"
                        android:padding="8dp"
                        android:textSize="16sp" />
                </TableRow>
                <!-- Langkah 2 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6-8 Maret (00:00 s/d 23:59)"
                        style="@style/color"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELEKSI"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                </TableRow>
                <!-- Langkah 3 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9 Maret (00:00 s/d 23:59 )"
                        android:padding="8dp"
                        android:textStyle="bold"
                        style="@style/color"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENGUMUMAN"
                        android:padding="8dp"
                        style="@style/color"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
